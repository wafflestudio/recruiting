<div class="under-line under-line-left">
   <h2>비밀번호 찾기</h2>
</div>

<div class="sub-container">
   <%= devise_error_messages! %>
   <%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => password_path(resource_name), :method => :post) do |f| %>
      <div class="control-group">
         <%= f.label :email, "이메일", :class => "control-label" %>
         <div class="controls">
            <%= f.text_field :email %>
         </div>
      </div>
      <div class="control-group">
         <div class="controls">
            <%= render "devise/shared/links" %>
         </div>
      </div>
   <% end %>
</div>

<div class="under-line under-line-right">
   <span class="symbol">>>></span>
   <%= link_to_function "<span>찾</span>기".html_safe, "$('form').submit();" %>
</div>
